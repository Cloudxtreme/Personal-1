Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.hostname = "bittorrentVPN"
  config.vm.network "forwarded_port", guest: 51413, host: 51413
  config.vm.network "forwarded_port", guest: 9091, host: 9091
  config.vm.network "public_network", ip: "10.0.0.55", bridge: "eth0"

  config.vm.synced_folder "/mnt/NAS/Downloads/", "/opt/Downloads/", create: true, owner: "debian-transmission"
  config.vm.synced_folder "/home/adamschoonover/Dropbox/Usenet-Watched/", "/opt/Usenet-Watched/", create: true, owner: "debian-transmission"

  config.vm.provision "shell", inline: "apt-get update"
  config.vm.provision "shell", inline: "sudo bash /vagrant/OpenVPN/openvpn.sh"
end
