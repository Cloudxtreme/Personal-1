Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/trusty64"
  config.vm.hostname = "borgbackuptest"
  #config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.network "public_network"
  config.vm.synced_folder "/Users/adamschoonover/Downloads", "/synced", create: true
  config.vm.provision "shell", inline: <<-SHELL
    sudo apt-get update git
    sudo apt-get install python3 python3-dev python3-pip python-virtualenv \
    libssl-dev openssl libacl1-dev libacl1 liblz4-dev liblz4-1 build-essential -y
    sudo apt-get install libfuse-dev fuse pkg-config -y

    virtualenv --python=python3 borg-env
    source borg-env/bin/activate

    # install Borg + Python dependencies into virtualenv
    pip install borgbackup
    # or alternatively (if you want FUSE support):
    pip install borgbackup[fuse]
SHELL
end
